<Application x:Class="Library_management.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/View/Theme/Converters.xaml"/>
                <!-- COLORS -->
                <ResourceDictionary Source="/View/Theme/Colors.xaml"/>
                <ResourceDictionary Source="/View/Theme/Brushes.xaml"/>

                <!-- TEMPLATES -->
                <ResourceDictionary Source="/View/Theme/Templates/Default.xaml"/>
                <ResourceDictionary Source="/View/Theme/Templates/Texts.xaml"/>
                <ResourceDictionary Source="/View/Theme/Templates/Buttons.xaml"/>
                <ResourceDictionary Source="/View/Theme/Templates/Collections.xaml"/>

                <!-- STYLES -->
                <ResourceDictionary Source="/View/Theme/Styles/Default.xaml"/>
                <ResourceDictionary Source="/View/Theme/Styles/Texts.xaml"/>
                <ResourceDictionary Source="/View/Theme/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/View/Theme/Styles/Collections.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>         
    </Application.Resources>
</Application>
