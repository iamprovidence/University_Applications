@model DataAccess.Entities.Apartment

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<hr />

<div class="row mb-2">
    <form asp-action="Create" enctype="multipart/form-data" class="w-100">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="main-photo" class="control-label">Image</label>
            <div class="text-center mb-2">
                <img src="~/uploads/files/apartment/noimage.png" width="200" height="150" id="preview-image" />
            </div>

            <div class="custom-file">
                <input type="file" name="uploadFile" id="apartment-photo-input" accept="image/*" class="custom-file-input">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" type="number" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success w-100" />
        </div>
    </form>

    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
</div>



@section Scripts
{
    <script src="~/js/areas/manager/apartments/image_preview.js"></script>
}