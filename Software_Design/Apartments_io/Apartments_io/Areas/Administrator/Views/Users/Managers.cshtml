@model Apartments_io.Areas.Administrator.ViewModels.Users.ManagersViewModel
<!--List-->
<div id="users-list">

    <table class="table table-hover mt-2">
        <thead class="thead-dark">

            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Manager</th>
                <th scope="col" class="text-center">Update</th>
            </tr>

        </thead>
        <tbody>

            @foreach (User residet in Model.Users)
            {
                <tr data-user-id="@residet.Id">
                    <td>
                        @residet.FirstName
                    </td>
                    <td>
                        @residet.LastName
                    </td>
                    <td>
                        <select class="form-control" id="UserManager" name="UserManager">

                            <option value="-1" selected disabled hidden>Choose manager here</option>

                            @foreach (User manager in Model.Managers)
                            {
                                if (manager.Id == residet.Manager?.Id)
                                {
                                    <option value="@manager.Id" selected>@manager.FirstName @manager.LastName</option>
                                }
                                else
                                {
                                    <option value="@manager.Id">@manager.FirstName @manager.LastName</option>
                                }
                            }
                        </select>

                    </td>
                    <td>
                        <button class="btn btn-success btn-update w-100">Update</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

    <!--PAGINATION-->
    <pagination-link pagination-model="Model.PaginationModel" controller-name="Users" action-name="Index"></pagination-link>

</div>


@section Scripts
{
    <script src="~/js/areas/administrator/users/managers.js"></script>
}